def bidding (name, b):
  auctiondic [name] = b
 
namequestion = input("Welcome to the secret auction program.\n  What is your name?\n")
bid = int(input("What is your bid?\n"))
otherbidders = input("Are there any other bidders? Type 'yes' or 'no'.\n")
  
auctiondic = {}

bidding (namequestion, bid)
  
def find_highest_bidder (bidding_record):
  highest_bid = 0
  for bidder in bidding_record:
    bid_amount = bidding_record [bidder]
    if bid_amount > highest_bid:
      highest_bid = bid_amount
      winner = bidder
  print (f"The winner is {winner} with a bid of ${highest_bid}")

while otherbidders == "yes": 
    clear()
    namequestion = input("Welcome to the secret auction program.\n  What is your name?\n")
    bid = int(input("What is your bid?\n"))
    otherbidders = input("Are there any other bidders? Type 'yes' or 'no'.\n")
    bidding(namequestion, bid)  

find_highest_bidder (auctiondic)
    

      


